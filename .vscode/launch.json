  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "API App Debug",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/shtl_ink",
      "args": ["shtl_ink_api.app:app", "--reload"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    }
  ]
}
